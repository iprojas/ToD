---
import type { HTMLAttributes } from 'astro/types'

interface Props extends HTMLAttributes<'a'> {
  children: any
  color?: string
}

const { color = '#fff', ...attr } = Astro.props
---

<a {...attr}>
  <slot />
</a>

<style lang="scss" define:vars={{ color }}>
  @use '../styles/mixins/medias.scss' as *;

  a {
    font-size: 15px;
    color: var(--color);
    opacity: 0.5;
    font-size: 20px;
  }
</style>
